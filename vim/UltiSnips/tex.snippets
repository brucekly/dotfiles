snippet temp "template" b
\\documentclass[11pt]{article}

\\usepackage{mathtools,amssymb,amsthm}
\\usepackage[T1]{fontenc}
\\usepackage[british]{babel}
\\usepackage[mathlf]{MinionPro}
\\usepackage{inconsolata}
\\usepackage[tracking,letterspace=50]{microtype}
\\usepackage[a4paper,heightrounded,textwidth=26pc]{geometry}
\\usepackage[tiny]{titlesec}
\\usepackage{csquotes}
\\usepackage[hidelinks]{hyperref}
\\usepackage{cleveref}

\\theoremstyle{plain}
\\newtheorem{thm}{Theorem}[section]
\\newtheorem{prop}[thm]{Proposition}
\\newtheorem{lem}[thm]{Lemma}
\\newtheorem{cor}{Corollary}[thm]
\\theoremstyle{definition}
\\newtheorem{defn}{Definition}[section]
\\newtheorem{axi}{Axiom}[section]
\\theoremstyle{remark}
\\newtheorem*{rem}{Remark}

\\titlespacing*{\section}{0pt}{1\baselineskip}{1\baselineskip}
\\titleformat{\section}{\scshape}{\upshape\thesection}{1em}{}
\\titlespacing*{\subsection}{0pt}{1\baselineskip}{1\baselineskip}
\\titleformat{\subsection}{\itshape}{\upshape\thesubsection}{1em}{}

\\DisableLigatures[T]{encoding=*,family=*}

\\title{${1:Title}}
\\author{${2:Bruce McPhail}}
\\date{$3}

\\begin{document}

\\flushbottom
\\frenchspacing
\\maketitle

$0

\\end{document}
endsnippet

