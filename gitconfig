[alias]
  	l = log --graph --pretty=format:'%C(yellow)%h %Creset%s%Cgreen [%cn] %Cred%d'
  	s = status -sbu
  	p = pull --recurse-submodules
  	c = clone --recursive
  	ca = !git add -A && git commit -av
  	reb = "!r() { git rebase -i HEAD~$1; }; r"
  	amend = commit --amend --reuse-message=HEAD
  	contributors = shortlog --summary --numbered
  	whoami = config user.email
  	aliases = config --get-regexp alias
[apply]
		whitespace = fix
[branch]
		sort = -committerdate
[push]
		# suppress warning
		default = simple
[help]
		autocorrect = 1
[core]
		# safely rebase on MacOS
		trustctime = false
[init]
		defaultBranch = main
[credential]
		helper = osxkeychain
