[alias]
  l = log --graph --oneline --color=always
  s = status -sbu
  ca = !git add -A && git commit
  amend = commit --amend --reuse-message=HEAD
  contributors = shortlog --summary --numbered
  whoami = config user.email
  aliases = config --get-regexp alias
[apply]
  whitespace = fix
[branch]
  sort = -committerdate
[push]
  default = simple
[pull]
	rebase = true
[help]
  autocorrect = 1
[core]
  trustctime = false
  excludesFile = ~/dotfiles/gitignore
[init]
  defaultBranch = main
[credential]
  helper = osxkeychain
