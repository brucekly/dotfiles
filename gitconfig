[alias]
  l = log --graph --pretty=format:'%C(yellow)%h %Creset%s%Cgreen [%cn] %Cred%d'
  s = status -sbu
  p = pull --recurse-submodules
  c = clone --recursive
  ca = !git add -A && git commit
  reb = "!r() { git rebase -i HEAD~$1; }; r"
  amend = commit --amend --reuse-message=HEAD
  contributors = shortlog --summary --numbered
  whoami = config user.email
  aliases = config --get-regexp alias
[apply]
  whitespace = fix
[branch]
  sort = -committerdate
[push]
  default = simple
[help]
  autocorrect = 1
[core]
  trustctime = false
  excludesFile = ~/dotfiles/gitignore
[init]
  defaultBranch = main
[credential]
  helper = osxkeychain
